<Window x:Class="Miftakhov.Views.ProductsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Miftakhov.Views"
        xmlns:vm="clr-namespace:Miftakhov.ViewModels"
        mc:Ignorable="d"
        Title="ProductsWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:ProductsWindowViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="#BBD9B2" Grid.Row="0" Padding="10">
            <TextBlock Text="Список продукции"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#2D6033"
                       VerticalAlignment="Center" />
        </Border>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,10" HorizontalAlignment="Right">
            <Button Content="← Назад"
                    Command="{Binding BackCommand}"
                    Width="100" Height="35"
                    Background="#2D6033" Foreground="White"
                    FontWeight="Bold"
                    Cursor="Hand" />
            <Button Content="Добавить"
                    Command="{Binding AddProductCommand}"
                    Width="140" Height="35"
                    Background="#67BA80" Foreground="White"
                    FontWeight="Bold"
                    Cursor="Hand" />
            <Button Content="Редактировать"
                    Command="{Binding EditProductCommand}"
                    Width="140" Height="35"
                    Background="#67BA80" Foreground="White"
                    FontWeight="Bold"
                    Cursor="Hand" />
            <Button Content="Удалить"
                    Command="{Binding DeleteProductCommand}"
                    Width="100" Height="35"
                    Background="#67BA80" Foreground="White"
                    FontWeight="Bold"
                    Cursor="Hand" />
        </StackPanel>

        <ListBox Grid.Row="2"
                 ItemsSource="{Binding Products}"
                 SelectedItem="{Binding SelectedProduct, Mode=TwoWay}"
                 Background="Transparent"
                 BorderThickness="0"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 HorizontalContentAlignment="Stretch"
                 Margin="0,10,0,0"
                 FontSize="18">

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1"
                BorderBrush="#BBD9B2"
                CornerRadius="8"
                Padding="15"
                Margin="0,0,0,15"
                Background="White"
                SnapsToDevicePixels="True">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock>
                        <Run Text="{Binding ProductTypeId}" FontWeight="Bold" Foreground="#2D6033"/>
                        <Run Text=" / "/>
                        <Run Text="{Binding ProductName}" FontWeight="Bold"/>
                                </TextBlock>

                                <TextBlock Text="{Binding Article}" Margin="0,5,0,0"/>

                                <TextBlock>
                        <Run Text="Мин. цена для партнёра: "/>
                        <Run Text="{Binding MinPartnerPrice}" />
                        <Run Text=" р"/>
                                </TextBlock>

                                <TextBlock>
                        <Run Text="Ширина: "/>
                        <Run Text="{Binding RollWidthMeters, StringFormat={}{0:F2}}"/>
                        <Run Text=" м"/>
                                </TextBlock>
                            </StackPanel>

                            <TextBlock Grid.Column="1"
                           Text="{Binding CalculatedCost, StringFormat=Стоимость: {0} р}"
                           FontWeight="Bold"
                           FontSize="18"
                           Foreground="#2D6033"
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
