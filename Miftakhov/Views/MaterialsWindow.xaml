<Window x:Class="Miftakhov.Views.MaterialsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Miftakhov.Views"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:Miftakhov.ViewModels"
        Title="MaterialsWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MaterialsWindowViewModel/>
    </Window.DataContext>
    <Grid Margin="10">
        <Button Content="← Назад"
                Width="100" Height="35"
                Background="#2D6033"
                Foreground="White"
                FontWeight="Bold"
                FontSize="18"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Cursor="Hand"
                Command="{Binding BackCommand}"/>

        <TextBlock Text="Список материалов"
                   FontSize="32"
                   FontWeight="Bold"
                   Foreground="#2D6033"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,20"/>

        <DataGrid Name="MaterialsDataGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  ItemsSource="{Binding Materials}"
                  Margin="0,70,0,0"
                  FontFamily="Gabriola"
                  RowBackground="White"
                  AlternatingRowBackground="#BBD9B2"
                  GridLinesVisibility="Horizontal"
                  FontSize="16">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding MaterialId}" Width="60"/>
                <DataGridTextColumn Header="Тип" Binding="{Binding MaterialTypeId}" Width="120"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Кол-во в упаковке" Binding="{Binding PackageQty}" Width="120"/>
                <DataGridTextColumn Header="Ед. изм." Binding="{Binding Unit}" Width="80"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Price, StringFormat=N2}" Width="100"/>
                <DataGridTextColumn Header="В наличии" Binding="{Binding InStock}" Width="100"/>
                <DataGridTextColumn Header="Мин. кол-во" Binding="{Binding MinQty}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
