<Window x:Class="Miftakhov.Views.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Miftakhov.Views"
        xmlns:vm="clr-namespace:Miftakhov.ViewModels"
        mc:Ignorable="d"
        Title="AddProductWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:AddProductWindowViewModel/>
    </Window.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Border Background="#BBD9B2" Grid.Row="0" Padding="10">
            <TextBlock Text="Добавить продукт"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#2D6033"
                       VerticalAlignment="Center" />
        </Border>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Grid.Row="1" Margin="0,20" VerticalAlignment="Top" >

                <Label Content="Тип продукции *" FontSize="18" Foreground="#2D6033"/>
                <TextBox Text="{Binding Product.ProductTypeId,  UpdateSourceTrigger=PropertyChanged}" 
           FontSize="18"
           Foreground="Black"
           Padding="4,2" />

                <Label Content="Наименование продукта *" FontSize="18" Foreground="#2D6033" Margin="0,10,0,0"/>
                <TextBox Text="{Binding Product.ProductName, UpdateSourceTrigger=PropertyChanged}" FontSize="18"/>

                <Label Content="Артикул *" FontSize="18" Foreground="#2D6033" Margin="0,10,0,0"/>
                <TextBox Text="{Binding Product.Article, UpdateSourceTrigger=PropertyChanged}" FontSize="18"/>

                <Label Content="Минимальная стоимость для партнёра (р) *" FontSize="18" Foreground="#2D6033" Margin="0,10,0,0"/>
                <TextBox Text="{Binding Product.MinPartnerPrice, UpdateSourceTrigger=PropertyChanged}" FontSize="18"/>

                <Label Content="Ширина рулона (м) *" FontSize="18" Foreground="#2D6033" Margin="0,10,0,0"/>
                <TextBox Text="{Binding Product.RollWidthMeters, UpdateSourceTrigger=PropertyChanged}" FontSize="18"/>
            </StackPanel>
        </ScrollViewer>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Назад"
                    Command="{Binding BackCommand}"
                    Width="120" Height="40"
                    Background="#BBD9B2"
                    Foreground="#2D6033"
                    FontWeight="Bold"
                    Cursor="Hand"/>

            <Button Content="Сохранить"
                    Command="{Binding SaveProductCommand}"
                    Width="120" Height="40"
                    Background="#2D6033"
                    Foreground="White"
                    FontWeight="Bold"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
