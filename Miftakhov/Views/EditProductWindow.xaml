<Window x:Class="Miftakhov.Views.EditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Miftakhov.Views"
        xmlns:vm="clr-namespace:Miftakhov.ViewModels"
        mc:Ignorable="d"
        Title="EditProductWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Редактирование продукта" FontSize="24" FontWeight="Bold" Foreground="#2D6033" Margin="0,0,0,15"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Stretch" >

                <Label Content="Тип продукции *" FontSize="18" Foreground="#2D6033"/>
                <TextBox Text="{Binding Product.ProductTypeId,  UpdateSourceTrigger=PropertyChanged}" 
                    FontSize="18"
                    Foreground="Black"
                    Padding="4,2" />
                <Label Content="Наименование продукта *" FontSize="18" Foreground="#2D6033" Margin="0,10,0,0"/>
                <TextBox Text="{Binding Product.ProductName, UpdateSourceTrigger=PropertyChanged}" FontSize="18"/>

                <Label Content="Артикул *" FontSize="18" Foreground="#2D6033" Margin="0,10,0,0"/>
                <TextBox Text="{Binding Product.Article, UpdateSourceTrigger=PropertyChanged}" FontSize="18"/>

                <Label Content="Минимальная стоимость для партнёра (р) *" FontSize="18" Foreground="#2D6033" Margin="0,10,0,0"/>
                <TextBox Text="{Binding Product.MinPartnerPrice, UpdateSourceTrigger=PropertyChanged}" FontSize="18"/>

                <Label Content="Ширина рулона (м) *" FontSize="18" Foreground="#2D6033" Margin="0,10,0,0"/>
                <TextBox Text="{Binding Product.RollWidthMeters, UpdateSourceTrigger=PropertyChanged}" FontSize="18"/>

            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Назад"
                    Width="120" Height="40"
                    Background="#BBD9B2"
                    Foreground="#2D6033"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Command="{Binding BackCommand}"/>

            <Button Content="Сохранить"
                    Width="120" Height="40"
                    Background="#2D6033"
                    Foreground="White"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Command="{Binding SaveCommand}"/>
        </StackPanel>
    </Grid>
</Window>
