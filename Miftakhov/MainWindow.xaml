<Window x:Class="Miftakhov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Miftakhov.ViewModels"
        xmlns:local="clr-namespace:Miftakhov"
        mc:Ignorable="d"
        Title="О" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid Margin="20">

        <TextBlock Text="Главное меню"
                   FontSize="24"
                   FontWeight="Bold"
                   FontFamily="Gabriola"
                   Foreground="#2D6033"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,30"/>

        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">

            <Button Content="Список продукции"
                    Width="220" Height="50"
                    Background="#2D6033"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="Bold"
                    FontFamily="Gabriola"
                    Command="{Binding OpenProductsCommand}"/>

            <Button Content="Список материалов"
                    Width="220" Height="50"
                    Background="#2D6033"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="Bold"
                    FontFamily="Gabriola"
                   Command="{Binding OpenMaterialCommand}"/>
        </StackPanel>

        <Border Background="#BBD9B2"
                Height="10"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Stretch"/>
    </Grid>
</Window>
